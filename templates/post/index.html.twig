{% extends 'base.html.twig' %}
{% block title %}Actualités
{% endblock %}
{% block body %}

	<section class="flex text-4xl font-bold h-48 items-center justify-center bg-section-header w-screen -mx-40 mb-24">
		<H2>Actualités</H2>
	</section>

	<section class="flex flex-wrap my-24 items-center justify-center gap-8">
		{% for post in posts %}
			<ul class="flex flex-col items-center justify-center w-80 bg-white-color rounded-lg shadow-lg p-8 py-0 h-96">
				{% if post.attachedPicture %}
					<li class="flex items-start">
						<img src="{{ asset('assets/uploads/post_pictures/') ~ post.attachedPicture.filename }}" width="100" height="100">
					</li>
				{% endif %}
				<li class="text-xs my-0.5"><span><strong>Heure : </strong></span>{{ post.dateTime ? post.dateTime|date('Y-m-d H:i:s') : '' }} <span></span></li>
				<li class="text-xs mb-0.5"><span><strong>Lieux : </strong></span>{{ post.place }}</li>
				<li class="text-sm font-bold">{{ post.title }}</li>
				<li class="text-sm">{{ post.content }}</li>
				<li class="flex justify-center mt-4">
					<a href="{{ path('app_post_show', {'id': post.id}) }}" class="bg-primary-color px-3 py-1 mb-2 rounded-lg hover:bg-fuchsia-700 shadow-lg">Voir plus</a>
				</li>
			</ul>
		{% else %}
			<h2 class="flex h-screen justify-center items-center text-3xl my-8 text-center secondary-color font-bold">Aucune actualité pour le moment.</h2>
		{% endfor %}
	</section>

{% endblock %}
