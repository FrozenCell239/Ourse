{% extends 'base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}
{% block body %}
    <h1>{{ post.title }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Lieu</th>
                <td>{{ post.place }}</td>
            </tr>
            <tr>
                <th>Date et heure</th>
                <td>{{ post.dateTime ? post.dateTime|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            {% if post.attachedPicture %}
            <tr>
                <th>Image</th>
                <td>
                    <img
                        src="{{ asset('assets/uploads/post_pictures/') ~ post.attachedPicture.filename }}"
                        class=""
                    >
                </td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">Retour</a>
    {% if app.user %}
    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Modifer</a>
    {{ include('post/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}