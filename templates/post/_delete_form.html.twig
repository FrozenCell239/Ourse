<form class="flex justify-center items-center" method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="flex justify-center py-2 px-5 bg-red-600 text-white font-semibold rounded-full shadow-md">Delete</button>
</form>